{
  "name": "chatoneverything",
  "version": "1.0.0",
  "description": "A transparent overlay for Linux with click-through support and global hotkeys",
  "main": "main.js",
  "scripts": {
    "start": "ELECTRON_OZONE_PLATFORM_HINT=x11 electron . --enable-transparent-visuals --disable-gpu --no-sandbox",
    "start:wayland": "electron . --enable-transparent-visuals --disable-gpu --no-sandbox",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "download-cloudflared": "node scripts/download-cloudflared.js",
    "lint": "eslint ."
  },
  "keywords": [
    "electron",
    "overlay",
    "linux",
    "transparent"
  ],
  "author": {
    "name": "Sumedh",
    "email": "sumedh88@outlook.com"
  },
  "homepage": "https://github.com/sumsupee/chatoneverything",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sumsupee/chatoneverything.git"
  },
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.6.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1"
  },
  "build": {
    "appId": "com.sumedh.chatoneverything",
    "productName": "chat-on-everything",
    "icon": "assets/title_plain.png",
    "files": [
      "main.js",
      "index.html",
      "preload.js",
      "config.js",
      "lib/**/*",
      "js/**/*",
      "mobile/**/*",
      "assets/**/*",
      "css/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/title_plain.png",
      "extraResources": [
        {
          "from": "bin/",
          "to": "bin/",
          "filter": [
            "dotool",
            "dotoolc",
            "dotoold",
            "cloudflared"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/title_plain.png",
      "extraResources": [
        {
          "from": "bin/",
          "to": "bin/",
          "filter": [
            "cloudflared.exe"
          ]
        }
      ]
    },
    "mac": {
      "identity": null,
      "target": [
        "dmg",
        "zip"
      ],
      "category": "Utility",
      "icon": "assets/title_plain.png",
      "extraResources": [
        {
          "from": "bin/",
          "to": "bin/",
          "filter": [
            "cloudflared-mac-*"
          ]
        }
      ],
    },
    "publish": {
      "provider": "github",
      "owner": "sumsupee",
      "repo": "chatoneverything"
    }
  }
}